#channel
    border 1px solid #000
    box-shadow 1px 1px 3px #eee
    width 100%
    height 250px

    pre
        position absolute
        top 0px
        left 0px
        margin 0
        padding 0
        border 0
        outline none
        font-family monospace
        font-size 14px
        line-height 14px
        visibility hidden

    #editor
        visibility hidden
        position absolute
        top 0px
        left 0px
        margin 0
        padding 0
        outline 1px solid #fe2
        font-family monospace
        font-size 14px
        line-height 14px
        resize none
        z-index 999

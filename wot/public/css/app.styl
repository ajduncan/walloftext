#window
    position absolute
    bottom 0
    right 0
    top 30px
    left 0
    overflow hidden
    background white
    border 1px solid #000

#channel
    width 100%
    height 100%

    pre
        position absolute
        top 0px
        left 0px
        margin 0
        padding 0
        border 0
        outline none
        font-family monospace
        font-size 14px
        line-height 14px
        visibility hidden

    #editor
        visibility hidden
        position absolute
        top 0px
        left 0px
        margin 0
        padding 0
        outline 1px solid #fe2
        font-family monospace
        font-size 14px
        line-height 14px
        resize none
        background-color transparent
        overflow hidden
        z-index 999
